    endpoints: {
      posts: 'https://jsonplaceholder.typicode.com/posts',
      users: 'https://jsonplaceholder.typicode.com/users',
      comments: 'https://jsonplaceholder.typicode.com/comments'
    }



  // 2️⃣ REST Countries - Country data

    url: 'https://restcountries.com/v3.1',
    description: 'Country information',
    features: ['Country details', 'Flags', 'Languages', 'Currencies'],
    auth: 'None required',
    endpoints: {
      all: 'https://restcountries.com/v3.1/all',
      byName: 'https://restcountries.com/v3.1/name/india',
      byCode: 'https://restcountries.com/v3.1/alpha/ind'
    }

   
  
  // 3️⃣ Dog CEO - Random dog pictures

