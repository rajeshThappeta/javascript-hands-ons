  // 1️⃣ OpenWeather - Weather data

    url: 'https://openweathermap.org/api',
    description: 'Current weather & forecasts',
    signUp: 'https://openweathermap.org/appid',
    freeTier: '1000 calls/day',
    endpoints: {
      current: 'https://api.openweathermap.org/data/2.5/weather?q=London&appid=YOUR_KEY',
      forecast: 'https://api.openweathermap.org/data/2.5/forecast?q=London&appid=YOUR_KEY'
    }



  
  // 2️⃣ News API - News articles
  
    url: 'https://newsapi.org',
    description: 'News from around the world',
    signUp: 'https://newsapi.org/register',
    freeTier: '100 requests/day',
    endpoints: {
      topHeadlines: 'https://newsapi.org/v2/top-headlines?country=us&apiKey=YOUR_KEY',
      everything: 'https://newsapi.org/v2/everything?q=bitcoin&apiKey=YOUR_KEY'
    }


  
  // 3️⃣ The Movie Database (TMDB) - Movie data
  
    url: 'https://www.themoviedb.org/documentation/api',
    description: 'Movie & TV show information',
    signUp: 'https://www.themoviedb.org/signup',
    freeTier: 'Unlimited (fair use)',
    endpoints: {
      popular: 'https://api.themoviedb.org/3/movie/popular?api_key=YOUR_KEY',
      search: 'https://api.themoviedb.org/3/search/movie?query=Inception&api_key=YOUR_KEY'
    }


  
  // 4️⃣ CoinGecko - Cryptocurrency data
 
    url: 'https://www.coingecko.com/en/api',
    description: 'Crypto prices & market data',
    signUp: 'Not required for basic tier',
    freeTier: '10-50 calls/minute',
    endpoints: {
